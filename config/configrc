# MySQL root password
export MYSQL_ROOT_PASSWORD=mysqlrootpassword

# The OpenStack admin user account
export OS_USERNAME=admin
export OS_PASSWORD=adminpassword
export OS_TENANT_NAME=admin
export OS_REGION_NAME=RegionOne

# Keystone settings
export KEYSTONE_MYSQL_PASSWORD=keystonemysqlpassword

# Glance settings
export GLANCE_MYSQL_PASSWORD=glancemysqlpassword
export GLANCE_SERVICE_USERNAME=glance
export GLANCE_SERVICE_PASSWORD=glancepassword

# Nova settings
export NOVA_MYSQL_PASSWORD=novamysqlpassword
export NOVA_SERVICE_USERNAME=nova
export NOVA_SERVICE_PASSWORD=novapassword

# Public IP address of the network gateway
export PUBLIC_IP_ADDRESS=128.250.26.161

# IP address of the metadata host (in our setup the metadata service
# is running on the controller) 
export METADATA_HOST=192.168.0.5


# Do NOT change the variables below

export GLANCE_SERVICE_TENANT=service
export NOVA_SERVICE_TENANT=service
export NOVA_OS_AUTH_URL=http://controller:5000/
export OS_AUTH_URL=http://controller:5000/v2.0/
